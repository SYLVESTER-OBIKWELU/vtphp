{
  "name": "vtapp/vtphp",
  "description": "VTPHP - Virtual Tech PHP Framework: A modern, feature-rich PHP framework inspired by Laravel",
  "type": "project",
  "license": "MIT",
  "keywords": [
    "framework",
    "php",
    "vtphp",
    "virtual-tech",
    "mvc",
    "orm",
    "blade",
    "tailwind"
  ],
  "authors": [
    {
      "name": "Virtual Tech",
      "email": "dev@virtualtech.com"
    }
  ],
  "require": {
    "php": ">=7.4",
    "phpmailer/phpmailer": "^6.8",
    "monolog/monolog": "^3.5",
    "nesbot/carbon": "^2.72",
    "guzzlehttp/guzzle": "^7.8",
    "vlucas/phpdotenv": "^5.6",
    "symfony/var-dumper": "^6.4",
    "symfony/console": "^6.4",
    "symfony/http-foundation": "^6.4",
    "league/flysystem": "^3.23",
    "predis/predis": "^2.2",
    "ramsey/uuid": "^4.7",
    "league/commonmark": "^2.4",
    "intervention/image": "^2.7",
    "bacon/bacon-qr-code": "^2.0",
    "symfony/process": "^6.4",
    "symfony/finder": "^6.4",
    "psr/simple-cache": "^3.0",
    "psr/log": "^3.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5",
    "mockery/mockery": "^1.6",
    "fakerphp/faker": "^1.23"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Core\\": "core/"
    },
    "files": [
      "core/helpers.php",
      "core/vite.php"
    ]
  },
  "scripts": {
    "serve": "php artisan serve",
    "migrate": "php artisan migrate",
    "fresh": "php artisan migrate:fresh",
    "test": "phpunit"
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
